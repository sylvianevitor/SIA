<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sylviane.sia.Atividade.Template1_Scene.CriarTemplate1Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_da_atividade" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="405dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:background="#aaa"
                android:src="@drawable/ic_camera"
                />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:background="#aaa"
                android:src="@drawable/ic_camera" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:background="#aaa"
                android:src="@drawable/ic_camera" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="176dp"
        android:layout_marginRight="36dp">

        <Button
            android:id="@+id/btnAudio1"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_volume_down_black_24dp"
            android:drawableStart="@drawable/ic_volume_down_black_24dp"
            android:text="ÁUDIO"
            android:textAlignment="center"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginEnd="232dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="176dp"
        android:layout_marginRight="232dp">

        <Button
            android:id="@+id/btnAudio2"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_volume_down_black_24dp"
            android:drawableStart="@drawable/ic_volume_down_black_24dp"
            android:text="ÁUDIO"
            android:textAlignment="center"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="176dp">

        <Button
            android:id="@+id/btnAudio3"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_volume_down_black_24dp"
            android:drawableStart="@drawable/ic_volume_down_black_24dp"
            android:text="ÁUDIO"
            android:textAlignment="center"
            android:textColor="#fff" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
