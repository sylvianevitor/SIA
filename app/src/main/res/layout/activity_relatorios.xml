<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_total_pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/observacoes"
        android:layout_marginTop="30dp"
        android:layout_gravity="center|center_horizontal"
        android:text="Total de pontos"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/total_pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_total_pontos"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="pontos" />

    <TextView
        android:id="@+id/observacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Observações"
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/text_observacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/botao_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_button"
        android:text="Sair e Salvar"
        android:padding="10dp"
        android:layout_gravity="center"/>

</LinearLayout>